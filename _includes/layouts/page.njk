---
layout: layouts/base.njk
---
<header class="masthead bg-primary text-white text-center">
  <div class="container d-flex align-items-center flex-column">
    <img class="masthead-avatar mb-5" src="https://res.cloudinary.com/tamas-demo/image/upload/f_auto,q_auto,w_240,h_240,c_thumb,g_face,r_max/{{myPage.data.photo}}" alt="{{ myPage.data.name }}">
    <h1 class="masthead-heading text-uppercase mb-0">{{ myPage.data.name }}</h1>
    <div class="divider-custom divider-light">
      <div class="divider-custom-line"></div>
      <div class="divider-custom-icon">
        <i class="fas fa-star"></i>
      </div>
      <div class="divider-custom-line"></div>
    </div>
    <p class="masthead-subheading font-weight-light mb-0">{{ myPage.data.role }}</p>
    <p class="masthead-subheading mb-0"><a class="text-dark" href="mailto:{{ myPage.data.email }}">{{ myPage.data.email }}</a></p>
  </div>
</header>
  
<footer class="footer text-center">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 mb-5 mb-lg-0">
        <h4 class="text-uppercase mb-4">Around the Web</h4>
        <a class="btn btn-outline-light btn-social mx-1" href="https://facebook.com/{{ myPage.data.facebook }}">
          <i class="fab fa-fw fa-facebook-f"></i>
        </a>
        <a class="btn btn-outline-light btn-social mx-1" href="https://twitter.com/{{ myPage.data.twitter }}">
          <i class="fab fa-fw fa-twitter"></i>
        </a>
        <a class="btn btn-outline-light btn-social mx-1" href="https://linkedin.com/in/{{ myPage.data.linkedin }}">
          <i class="fab fa-fw fa-linkedin-in"></i>
        </a>
      </div>
    </div>
  </div>
</footer>

<section class="copyright py-4 text-center text-white">
  <div class="container">
    <small>Copyright &copy; {{ myPage.data.name }} 2019</small>
  </div>
</section>